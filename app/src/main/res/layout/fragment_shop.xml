<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent" android:layout_height="match_parent"
             tools:context=".fragment.ShopFragment">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <ImageView
                android:id="@+id/merchant_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="55"
                android:scaleType="center"
                android:background="#FFF0F000"/>

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_weight="35">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="30dp">
                <TextView
                        android:id="@+id/merchant_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="The Sea Terrace restaurant at Sunset Village Beach Resort"
                        android:textColor="#000000"
                        android:textSize="30sp"
                        android:fontFamily="@font/josefin_sans_regular"/>
                <TextView
                        android:id="@+id/merchant_coupon_food"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ปลากะพงสามรส"
                        android:textColor="#000000"
                        android:textSize="26sp"
                        android:paddingTop="10dp"
                        android:fontFamily="@font/josefin_sans_regular"/>

                <TextView
                        android:id="@+id/merchant_coupon_describe"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ปลากะพงทอดมาแบบกรอบ ๆ ราดมาด้วยซอสสามรสกลมกล่อม เปรี้ยวหวานเค็มกำลังดี รสเปรี้ยวมาจากซอสมะขาม"
                        android:textColor="#000000"
                        android:textSize="18dp"
                        android:paddingTop="10dp"
                        android:fontFamily="@font/josefin_sans_regular"/>
                <TextView
                        android:id="@+id/merchant_original_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="400.0"
                        android:textColor="#FF0000"
                        android:textSize="18dp"
                        android:paddingTop="10dp"
                        android:fontFamily="@font/josefin_sans_regular"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right">
                    <TextView
                            android:id="@+id/merchant_coupon_expire"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="หมดอายุใน 31-07-2562"
                            android:textColor="#FF0000"
                            android:textSize="18dp"
                            android:fontFamily="@font/josefin_sans_regular"
                            android:background="#FFEB3B"
                            android:layout_marginTop="10dp"
                            android:padding="10dp"/>
                </LinearLayout>

                <TextView
                        android:id="@+id/blank2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
        </ScrollView>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="#F0000F">
            <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:backgroundTint="#50B72B"
                    android:text="70฿ ซื้อเลย"
                    android:textSize="30sp"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/roundedbutton"
                    android:fontFamily="@font/josefin_sans_regular"/>
        </LinearLayout>

    </LinearLayout>


</FrameLayout>