<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

    <TextView
            android:id="@+id/promotion_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="20sp"
            android:text="เย็นตาโฟ + น้ำเก็กฮวย"/>

    <TextView
            android:id="@+id/macharnt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="20sp"
            android:text="ร้านเย็นตาโฟ เจ๊จู"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="20sp"
            android:text="- - - - - - - - - - - - - - - - - - - - - - - - - - - - - -"/>

    <LinearLayout
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/datetitle"
                android:layout_gravity="left"
                android:layout_marginRight="230dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="Date "/>

        <TextView
                android:id="@+id/expire_timeouttitle"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#E91E63"
                android:text="Expire In"/>

    </LinearLayout>

    <LinearLayout
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/date"
                android:layout_gravity="start"
                android:layout_marginRight="175dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="July 27, 2019 "/>

        <TextView
                android:id="@+id/expire_timeout"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#E91E63"
                android:text="00.40.34"/>

    </LinearLayout>

    <LinearLayout
            android:paddingTop="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/coupon_dialog_qr"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="#FF9800"/>=
    </LinearLayout>

    <LinearLayout
            android:paddingTop="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


        <Button
                android:id="@+id/coupon_dialog_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="close"/>

    </LinearLayout>

</LinearLayout>