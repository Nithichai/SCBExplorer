<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

    <TextView
            android:id="@+id/coupon_dialog_promotion_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="20sp"
            android:text="เย็นตาโฟ + น้ำเก็กฮวย"/>

    <TextView
            android:id="@+id/coupon_dialog_merchant_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="20sp"
            android:text="ร้านเย็นตาโฟ เจ๊จู"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="20sp"
            android:text="- - - - - - - - - - - - - - - - - - - - - - - - - - - - - -"/>

    <LinearLayout
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:layout_gravity="start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_weight="1"
                android:text="Date "/>

        <TextView
                android:gravity="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#E91E63"
                android:layout_weight="1"
                android:text="Expire In"/>

    </LinearLayout>

    <LinearLayout
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/coupon_dialog_date"
                android:layout_gravity="start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_weight="1"
                android:text="July 27, 2019 "/>

        <TextView
                android:id="@+id/coupon_dialog_expire_timeout"
                android:layout_gravity="end"
                android:gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#E91E63"
                android:layout_weight="1"
                android:text="00:40:34"/>

    </LinearLayout>

    <LinearLayout

            android:layout_marginTop="20dp"
            android:layout_width="150dp"
            android:layout_height="150dp">

        <ImageView
                android:id="@+id/coupon_dialog_qr"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="#FFFFFF"
                android:src="@mipmap/mock_qrcode"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <Button
                android:id="@+id/coupon_dialog_close"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/roundclose_button"
                android:textColor="#fff"
                android:text="close"/>

    </LinearLayout>

</LinearLayout>